  <table>
    <tr>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Artist</th>
      <th>Stage</th>
      <th>Add Performance</th>
    </tr>


    <tr>
      <% @performances.each do |performance| %>
        <tr>
          <td> <%= performance.start_time.strftime("%A at %l:%m %p") %> </td>
          <td> <%= performance.end_time.strftime("%A at %l:%m %p") %> </td>
          <td> <%= performance.artist.name %> </td>
          <td> <%= performance.stage.name %> </td>
          <td> <%= button_to "Add to My Schedule", bookings_path(:performance_id => performance, :schedule_id => @user.schedule) %> </td>
        </tr>
      <% end %>
      <% if flash[:errors] %>
          <% flash[:errors].each do |error| %>
              <%= error %>
          <% end %>
      <% end  %>
      <br>
    </tr>
  </tr>
  </table>

