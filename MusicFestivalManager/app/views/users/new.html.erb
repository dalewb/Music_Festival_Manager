  <%= f.label :gender, "Male" %>
  <%= f.radio_button :gender, "Female" %>
  <%= f.label :gender, "Female" %><br />
  <%= f.label :age %>
  <%= f.number_field :age %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <%= f.label :password_confirmation, "Retype your password:" %>
  <%= f.password_field :password_confirmation %><br />
  <%= f.submit %>
