<h2>Create a new user:</h2>
<%= form_for @user do |f| %>
  <%= f.label :name, "Username:" %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Retype your password:" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
